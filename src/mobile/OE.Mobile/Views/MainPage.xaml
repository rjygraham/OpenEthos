<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
	x:Class="OE.Mobile.Views.MainPage"
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

	<StackLayout>
		<Label
			Padding="30,24,30,0"
			FontSize="16"
			Text="{Binding Username}" />
		<Label
			Padding="30,24,30,0"
			FontSize="16"
			Text="{Binding DisplayName}" />
		<Label
			Padding="30,24,30,0"
			FontSize="16"
			Text="{Binding IsAuthenticated}" />
		<Button Command="{Binding LoginCommand}" Text="Login" />
		<Button Command="{Binding LogoutCommand}" Text="Logout" />
		<Button Command="{Binding InvokeApiCommand}" Text="Get Profile" />
	</StackLayout>

</ContentPage>
