<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
	x:Class="OE.Mobile.Views.InvitePage"
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
	<ContentPage.Content>
		<StackLayout>
			<Label Text="Name" />
			<Entry Text="{Binding Path=Name, Mode=TwoWay}" />

			<Label Text="EmailAddress" />
			<Entry Text="{Binding Path=EmailAddress, Mode=TwoWay}" />

			<Button Command="{Binding Path=SendInviteCommand}" Text="Send Invite" />

		</StackLayout>
	</ContentPage.Content>
</ContentPage>